<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/news_item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:minHeight="250px"
        android:minWidth="250px" />

    <com.sbhachu.bbcnewsreader.presentation.view.CustomTextView
        android:id="@+id/news_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/news_item_image_view"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="22sp"
        app:fontStyle="roboto_condensed_bold" />

    <com.sbhachu.bbcnewsreader.presentation.view.CustomTextView
        android:id="@+id/news_item_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_item_title"
        android:layout_toRightOf="@id/news_item_image_view"
        android:maxLines="3"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="18sp"
        app:fontStyle="roboto_condensed_light" />

</RelativeLayout>