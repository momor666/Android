<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" android:background="#ffffff"
             tools:context="com.sbhachu.flingchallenge.presentation.fragment.ImageListFragment">

    <ListView
        android:id="@+id/subject_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@color/listDivider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/qualification_list_item_background_selector"/>

    <TextView
        android:id="@+id/no_subjects_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:shadowColor="@color/shadowColor"
        android:text="@string/no_subjects_message"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"/>

</FrameLayout>