<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.sbhachu.audioplayer.presentation.fragment.ArtistListFragment">

    <ListView
        android:id="@+id/genre_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@color/navigation_drawer_list_divider"
        android:listSelector="@drawable/track_list_item_background_selector"
        android:dividerHeight="1dp" />

    <ProgressBar
        android:id="@+id/genre_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/custom_progressbar_round" />

</FrameLayout>
